{
    "name": "mgjgid/laravel-http-tests-generator",
    "type": "library",
    "description": "Autogenerate http tests for laravel",
    "keywords": ["Jgid", "autohttptests"],
    "homepage": "https://github.com/Jgid/autohttptests",
    "license": "MIT",
    "authors": [
        {
            "name": "Eduardo Aranda Hernandez",
            "email": "eduardoarandah@gmail.com",
            "homepage": "https://eduardoarandah.github.io/",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "^10.0",
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Jgid\\LaravelHttpTestsGenerator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jgid\\LaravelHttpTestsGenerator\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jgid\\LaravelHttpTestsGenerator\\AutoHttpTestsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
